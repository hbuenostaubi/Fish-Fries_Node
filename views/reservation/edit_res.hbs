<link rel='stylesheet' href='/stylesheets/style.css' />


<form class="post" method="post" action="/reservations/save">
    <!--    allows user to enter input values and resubmit and save-->
    <input type="hidden" name="saveMethod"
        value = "{{#if doCreate}}create{{else}}update{{/if}}"/>
    <div class="col-lg-10 align-items-center">
    <p>
<!--        resKey old value-->
        <input type="hidden" name="resId" value="{{resId}}"/>
        <!--            input to the form-->
    </p>
    <p>
        Title: <input type="text" name="title" value="{{resTitle}}"/><br/>
    </p>
    <p>
        Time: <input type="datetime-local" name="tableTime" value="{{tableTime}}"/><br/>
    </p>
    <p>
        Total Party: <input type="text" name="tableParty" value="{{tableParty}}"/><br/>
    </p>
    <textarea rows=5 cols=40 name="body">{{resBody}}</textarea> <br/>
    <input type="submit" value="Submit"/>
    <!--    value above gets displayed-->
    </div>
</form>